<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MessingAround" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/transparent</item>
    </style>
</resources>